@using tatil.entity.EntityReferences.User
@model ResetPasswordModel
@{
    ViewData["Title"] = "E-Posta Adresimi Güncelle";
    Layout = "~/Views/Shared/_ProcessLayout.cshtml";
}
@section Styles{
    <style>
        main{
            min-height:75vh;
            display:flex;
            justify-content:center;
        }
        .login-title{
            font-size: 1.5rem;
            font-weight: bold;
        }
        label{
            margin-bottom:0!important;
        }
        .input-user{
            padding: .4rem .35rem;
        }
    </style>
}
<div class="login-page quicksand d-flex align-items-center">
    <div class="login-cart p-4" style="box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px, rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;">
    <div class="mt-3 data-annotations">
        <div asp-validation-summary="All"></div>
        <ul>@Html.Raw(TempData["Errors"])</ul>
    </div>
        <div style="width:400px;">
            <h2 style="font-size:1.5rem;font-family:'quicksand', sans-serif" class="border-bottom">Şifre Sıfırla</h2>
            <form method="post" class="login-form" style="width:100%;">
                <div class="input-div">
                    <label asp-for="Email">E-Posta Adresi</label>
                    <input type="email" asp-for="Email" class="w-100 d-block input-user" placeholder="E-Posta Adresi Buraya">
                </div>
                <div class="input-div mt-2">
                    <label asp-for="Password">Yeni Şifre</label>
                    <input type="password" asp-for="Password" class="w-100 d-block input-user">
                </div>
                <div class="input-div mt-2">
                    <label asp-for="PasswordAgain">Yeni Şifre Tekrar</label>
                    <input type="password" asp-for="PasswordAgain" class="w-100 d-block input-user">
                </div>
                <input hidden asp-for="Token"/>
                <input hidden asp-for="userId"/>
                <button type="submit" class="button-user">Gönder</button>
            </form>
        </div>
    </div>
</div>
