@section Styles{
    <style>
        .login-cart .input-user{
            padding: .4rem .35rem;
        }

        .login-page .left, .login-page .right{
            box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px, rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;
        }

        .login-page{
            min-height: 40vh;
            display: flex;
            align-items: center;
            width: 100%;
        }

        .height-290{
            height: 320px;
            justify-content: space-around;
        }
        .fgpass a{
            font-weigth:400!important1;
        }
        .fgpass a:hover{
            color: #7d7d7d!important;
        }
    </style>
}
<main>
    <div class="sub-header-sm" style="background-image: url('/img/subheader1.jpg');">
        <div class="container sub-header-content">
            <h2 class="sub-header-title">Giriş Yap/Kayıt Ol</h2>
            <p>Eğer bir hesabınız varsa giriş yapıp dilediğiniz gibi sitemizde dolaşabilir, eğer bir hesabınız yoksa hemen bir tane oluşturabilirsiniz.</p>
        </div>
    </div>
    <div class="mt-3 data-annotations container">
        <div asp-validation-summary="All"></div>
        <ul class="data-errors">@Html.Raw(TempData["Errors"])</ul>
    </div>
    <section class="container d-flex login-page">
        <form class="mr-2 left w-50 d-flex flex-column p-4 login-form-cart " method="post" action="/auth/login">
            <h3 class="d-block text-center light-title">Giriş Yap</h3>
            <div class="height-290 d-flex flex-column">
                <div class="login-cart mt-3">
                    <div class="form-group">
                        <label for="emailLogin">E-Posta Adresi</label>
                        <input type="email" class="input-user d-block w-100" id="emailLogin" name="email" aria-describedby="emailHelp" placeholder="E-Posta Adresiniz">
                        </div>
                </div>
                <div class="login-cart">
                    <div class="form-group">
                        <label for="passwordlogin">Şifre</label>
                        <input type="password" class="input-user d-block w-100" id="passwordlogin" name="password" aria-describedby="emailHelp" placeholder="Şifreniz">
                    </div>
                    <small class="d-block text-right fgpass"><a class="border-bottom smoke" href="/auth/forgotpassword">Şifremi Unuttum</a></small>
                </div>
                <div class="text-right w-100 d-block">
                    <button class="button-user w-50">Giriş Yap</button>
                </div>
            </div>
        </form>
        <form class="ml-2 right w-100 d-flex flex-column p-4 register-form-cart" method="post" action="/auth/register">
            <h3 class="d-block w-100 text-center light-title">Kayıt Ol</h3>
            <div class="height-290 d-flex flex-column register-cart">
                <div class="row">
                    <div class="col-sm">
                        <div class="login-cart mt-3">
                            <div class="form-group">
                                <label for="firstname">İsim</label>
                                <input type="text" class="input-user d-block w-100" id="firstname" name="FirstName" placeholder="İsminiz">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="login-cart mt-3">
                            <div class="form-group">
                                <label for="surname">Soyisim</label>
                                <input type="text" class="input-user d-block w-100" id="surname" name="LastName" placeholder="Soyisminiz">
                                </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm">
                        <div class="login-cart">
                            <div class="form-group">
                                <label for="emailRegister">E-Posta Adresi</label>
                                <input type="email" class="input-user d-block w-100" id="emailRegister" name="Email" placeholder="E-Posta Adresiniz">
                                </div>
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="login-cart">
                            <div class="form-group">
                                <label for="phoneNumberRegister">Telefon Numarası</label>
                                <input type="text" class="input-user d-block w-100" id="phoneNumberRegister" name="PhoneNumber" placeholder="Telefon Numaranız">
                                </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm">
                        <div class="login-cart">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Şifre</label>
                                <input type="password" class="input-user d-block w-100" id="exampleInputEmail1" name="Password" placeholder="Şifre">
                                </div>
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="login-cart">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Şifre (Tekrar)</label>
                                <input type="password" class="input-user d-block w-100" id="exampleInputEmail1" name="PasswordAgn" placeholder="Şifre (Tekrar)">
                                </div>
                        </div>
                    </div>
                </div>
                <div class="text-right w-100 d-block">
                    <button class="button-user w-25">Kayıt Ol</button>
                </div>
            </div>
        </form>
    </section>
</main>