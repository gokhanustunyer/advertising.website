@using tatil.entity.Statics
@model MainPageContent
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    if (Model.LinkBoxes == null){ Model.LinkBoxes = new() { null, null, null, null }; }
    if (Model.BackgorundFilterIsWhite == null){ Model.BackgorundFilterIsWhite = false; }
    if (Model.ButtonIsDark == null){ Model.ButtonIsDark = false; }
    if (Model.ButtonIsOutline == null){ Model.ButtonIsOutline = false; }
    if (Model.LinkBoxesIsBlack == null){ Model.LinkBoxesIsBlack = false; }
    if (Model.ContentTitle == null){ Model.ContentTitle = ""; }
    int count = 4 - Model.LinkBoxes.Count;
    for (int i = 0; i < count;i++) { Model.LinkBoxes.Add(null); }
}
@section Scripts{}
@section Styles{}
<form class="mt-5 form-group" method="post" enctype="multipart/form-data">
    <h2 style="padding: .5rem">Yeni Link Alanı</h2>
    <small>Dört taneye kadar link girilebilir</small>
    <div class="form-group mt-2 box-shadow">
        <div class="col-md-12">
            <label for="MainTitle" class="col-md-12">Genel Başlık</label>
            <input type="text" name="MainTitle" id="MainTitle" class="form-control form-control-line" value="@Model.ContentTitle">
        </div>
    </div>
    <div class="form-group mt-2 box-shadow">
        <h4 class="col-md-12">Birinci Link Kutusu</h4>
        <div class="col-md-12">
            <label for="Image1" class="col-md-12">Resim</label>
            <p>Aktif Resim</p>
            @if (@Model.LinkBoxes[0] != null){
                <img width="400" src="@Model.LinkBoxes[0].ImagePath"/>
            }
            <input type="file" name="Image1" id="Image1">
        </div>
        <div class="col-md-12">
            <label for="Title1" class="col-md-12">Başlık</label>
            <input type="text" name="Title1" id="Title1" class="form-control form-control-line" value="@((Model.LinkBoxes[0]!=null) ? Model.LinkBoxes[0].Title : "")">
        </div>
        <div class="col-md-12">
            <label for="Link1" class="col-md-12">Yönlendirilecek Link</label>
            <input type="text" name="Link1" id="Link1" class="form-control form-control-line"  value="@((Model.LinkBoxes[0]!=null) ? Model.LinkBoxes[0].Link : "")">
        </div>
    </div>
    <div class="form-group mt-2 box-shadow">
        <h4 class="col-md-12">İkinci Link Kutusu</h4>
        <div class="col-md-12">
            <label for="Image2" class="col-md-12">Resim</label>
            <p>Aktif Resim</p>
            @if (@Model.LinkBoxes[1] != null){
                <img width="400" src="@Model.LinkBoxes[1].ImagePath"/>
            }
            <input type="file" name="Image2" id="Image2">
        </div>
        <div class="col-md-12">
            <label for="Title2" class="col-md-12">Başlık</label>
            <input type="text" name="Title2" id="Title2" class="form-control form-control-line" value="@((Model.LinkBoxes[1]!=null) ? Model.LinkBoxes[1].Title : "")">
        </div>
        <div class="col-md-12">
            <label for="Link2" class="col-md-12">Yönlendirilecek Link</label>
            <input type="text" name="Link2" id="Link2" class="form-control form-control-line"  value="@((Model.LinkBoxes[1]!=null) ? Model.LinkBoxes[1].Link : "")">
        </div>
    </div>
    <div class="form-group mt-2 box-shadow">
        <h4 class="col-md-12">Üçüncü Link Kutusu</h4>
        <div class="col-md-12">
            <label for="Image3" class="col-md-12">Resim</label>
            <p>Aktif Resim</p>
            @if (@Model.LinkBoxes[2] != null){
                <img width="400" src="@Model.LinkBoxes[2].ImagePath"/>
            }
            <input type="file" name="Image3" id="Image3">
        </div>
        <div class="col-md-12">
            <label for="Title3" class="col-md-12">Başlık</label>
            <input type="text" name="Title3" id="Title3" class="form-control form-control-line" value="@((Model.LinkBoxes[2]!=null) ? Model.LinkBoxes[2].Title : "")">
        </div>
        <div class="col-md-12">
            <label for="Link3" class="col-md-12">Yönlendirilecek Link</label>
            <input type="text" name="Link3" id="Link3" class="form-control form-control-line"  value="@((Model.LinkBoxes[2]!=null) ? Model.LinkBoxes[2].Link : "")">
        </div>
    </div>
    <div class="form-group mt-2 box-shadow">
        <h4 class="col-md-12">Dördüncü Link Kutusu</h4>
        <div class="col-md-12">
            <label for="Image4" class="col-md-12">Resim</label>
            <p>Aktif Resim</p>
            @if (@Model.LinkBoxes[3] != null){
                <img width="400" src="@Model.LinkBoxes[3].ImagePath"/>
            }
            <input type="file" name="Image4" id="Image4">
        </div>
        <div class="col-md-12">
            <label for="Title4" class="col-md-12">Başlık</label>
            <input type="text" name="Title4" id="Title4" class="form-control form-control-line" value="@((Model.LinkBoxes[3]!=null) ? Model.LinkBoxes[3].Title : "")">
        </div>
        <div class="col-md-12">
            <label for="Link4" class="col-md-12">Yönlendirilecek Link</label>
            <input type="text" name="Link4" id="Link4" class="form-control form-control-line"  value="@((Model.LinkBoxes[3]!=null) ? Model.LinkBoxes[3].Link : "")">
        </div>
    </div>
    <div class="form-group mt-2 box-shadow">
        <h4 class="col-md-12">Arka Plan Ayarları</h4>
        <div class="col-md-12">
            <label for="BackgroundImage" class="col-md-12">Resim</label>
            @if (@Model.BackgroundImagePath != null){
                <img width="400" src="@Model.BackgroundImagePath"/>
            }
            <input type="file" name="BackgroundImage" id="BackgroundImage">
        </div>
        <div class="col-md-12">
            <h4 class="col-md-12">Arka Plan Filtresi</h4>
            <input type="radio" id="siyah" name="BackgroundFilter" value="black" @(((bool)Model.BackgorundFilterIsWhite) ? "" : "checked")>
            <label for="siyah">Siyah</label>
            <input type="radio" id="white" name="BackgroundFilter" value="white" @(((bool)Model.BackgorundFilterIsWhite) ? "checked" : "")>
            <label for="white">Beyaz</label>
        </div>
        <div class="col-md-12">
            <h4 class="col-md-12">Arka Plan Resmini Kaldır</h4>
            <input type="checkbox" id="removebg" name="RemoveBackground" value="removeBg">
            <label for="removebg">Kaldır</label>

        </div>
    </div>
    <div class="form-group mt-2 box-shadow">
        <h4 class="col-md-12">Link Kutusu Ayarları</h4>
        <div class="col-md-12">
            <h4 class="col-md-12">Fare Efekti</h4>
            <input type="radio" id="zoom" name="LinkCartFilter" value="zoom" @(((bool)Model.LinkBoxesIsBlack) ? "" : "checked")>
            <label for="zoom">Zoom</label>
            <input type="radio" id="blackfilter" name="LinkCartFilter" value="blackfilter" @(((bool)Model.LinkBoxesIsBlack) ? "checked" : "")>
            <label for="blackfilter">Siyah Filtre</label>
        </div>
    </div>
    <div class="form-group mt-2 box-shadow">
        <h4 class="col-md-12">Buton Ayarları (Buton Olmayacaksa Boş Geçin)</h4>
        <div class="col-md-12">
            <div class="col-md-12">
                <label for="ButtonText" class="col-md-12">Buton Üzerindeki Yazı</label>
                <input type="text" name="ButtonText" id="ButtonText" class="form-control form-control-line" value="@((Model.ButtonText!=null) ? Model.ButtonText: "")">
            </div>
                <div class="col-md-12">
                <label for="ButtonLink" class="col-md-12">Buton Linki</label>
                <input type="text" name="ButtonLink" id="ButtonLink" class="form-control form-control-line" value="@((Model.ButtonLink!=null) ? Model.ButtonLink: "")">
            </div>
        </div>
    </div>
    <input hidden name="Id" value="@Model.Id"/>
    <button class="btn btn-primary" style="width:100%;display:block">Kaydet</button>
</form>