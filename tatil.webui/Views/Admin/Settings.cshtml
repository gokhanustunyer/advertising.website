@using tatil.entity.Statics
@model PageStrings
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Scripts{
    <script src="~/js/froala_editor.pkgd.min.js"></script>
    <script>
        new FroalaEditor('#AboutUs', {
            imageUploadParam: 'image_param',
            imageUploadURL: '/home/uploadImage',
            imageUploadMethod: 'POST',
            imageMaxSize: 5 * 1024 * 1024,
            imageAllowedTypes: ['jpeg', 'jpg', 'png', 'webp', 'avif'],
        });
        new FroalaEditor('#ShortDescription', {
        events: {
            'image.beforeUpload': function(img) {
            }
        }
        });
    </script>
}
@section Styles{
    <link rel="stylesheet" href="~/css/froala_editor.pkgd.min.css">
}
<form class="mt-5 form-group" method="post">
    <h4 style="padding: .5rem">Site Ayarları</h4>
    <div class="form-group mt-2">
        <label asp-for="EmailAddress" class="col-md-12">İletişim E-Posta</label>
        <div class="col-md-12">
            <input type="text" asp-for="EmailAddress" class="form-control form-control-line">
        </div>
    </div>
    <div class="form-group mt-2">
        <label asp-for="ContactAddress" class="col-md-12">Adres</label>
        <div class="col-md-12">
            <input type="text" asp-for="ContactAddress" class="form-control form-control-line">
        </div>
    </div>
    <div class="form-group mt-2">
        <label asp-for="PhoneNumber" class="col-md-12">Telefon Numarası</label>
        <div class="col-md-12">
            <input type="text" asp-for="PhoneNumber" class="form-control form-control-line">
        </div>
    </div>
    <div class="form-group mt-2">
        <label asp-for="WPNumber" class="col-md-12">Whatsapp Numarası</label>
        <div class="col-md-12">
            <input type="text" asp-for="WPNumber" class="form-control form-control-line">
        </div>
    </div>
    <div class="form-group mt-2">
        <label asp-for="TwitterLink" class="col-md-12">Twitter Link</label>
        <div class="col-md-12">
            <input type="text" asp-for="TwitterLink" class="form-control form-control-line">
        </div>
    </div>
    <div class="form-group mt-2">
        <label asp-for="InstagramLink" class="col-md-12">İnstagram Link</label>
        <div class="col-md-12">
            <input type="text" asp-for="InstagramLink" class="form-control form-control-line">
        </div>
    </div>
    <div class="form-group mt-2">
        <label asp-for="FacebookLink" class="col-md-12">Facebook Link</label>
        <div class="col-md-12">
            <input type="text" asp-for="FacebookLink" class="form-control form-control-line">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="AboutUs" class="col-md-12">Hakkımızda Sayfası</label>
        <div class="col-md-12">
            <textarea type="text" asp-for="AboutUs" class="form-control form-control-line">@Model.AboutUs</textarea>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="FooterDescription" class="col-md-12">Sayfa Alt Kısım Açıklaması (Footer)</label>
        <div class="col-md-12">
            <textarea type="text" asp-for="FooterDescription" class="form-control form-control-line">@Model.FooterDescription</textarea>
        </div>
    </div>
  <button class="btn btn-primary" style="width:100%;display:block">Kaydet</button>
</form>
<form method="post" action="/admin/rebuildsitemap">
    <button class="btn btn-primary" style="width:100%;display:block">Site Haritasını Yenile</button>
</form>